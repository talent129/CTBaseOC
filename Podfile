  pod 'DZNEmptyDataSet', '~> 1.8.1' # 占位
  pod 'MJRefresh', '~> 3.5.0' # 下拉刷新、上拉加载更多
  pod 'SDWebImage', '~> 5.10.4' # 图片
  pod 'MBProgressHUD', '~> 1.2.0' # loading
  pod 'Reachability', '~> 3.2' # 网络状态
  pod 'YYModel', '~> 1.0.4' # 模型
  pod 'IQKeyboardManager', '~> 6.5.10' # 键盘
  pod 'UITextView+Placeholder', '~> 1.4.0' # textView 带placeholder
  pod 'Toast', '~> 4.0.0' # 提示

end
